{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": 1,
        "semi": [2, "always"],
        "spaced-comment": 1,
        "no-multi-spaces": "error",
        "default-case": 1,
        "no-var": "error",
        "@typescript-eslint/no-useless-constructor": "error",
        "sort-imports": "error",
        "max-params": [1, { "max": 3 }],
        "multiline-comment-style": ["error", "starred-block"]
    }
}
